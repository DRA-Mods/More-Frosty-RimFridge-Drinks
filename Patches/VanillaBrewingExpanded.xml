<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperation.FindModByID">
    <mods>
      <li>VanillaExpanded.VBrewE</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef/comps/li[@Class='RimFridge.CompProperties_Refrigerator']/drinksBestCold</xpath>
      <value>
        <!-- General drinks -->
        <li>VBE_EnergyDrink</li>
        <li>VBE_Juice</li>
        <li>VBE_Soda</li>

        <!-- Cocktails -->
        <li>VBE_SimpleCocktail</li>
        <li>VBE_FineCocktail</li>
        <li>VBE_LavishCocktail</li>
        <li>VBE_GourmetCocktail</li>

        <!-- Alcohols -->
        <!-- Ambrandy -->
        <li>VBE_AmbrandyAwful</li>
        <li>VBE_AmbrandyPoor</li>
        <li>VBE_AmbrandyNormal</li>
        <li>VBE_AmbrandyGood</li>
        <li>VBE_AmbrandyExcellent</li>
        <li>VBE_AmbrandyMasterwork</li>
        <li>VBE_AmbrandyLegendary</li>

        <!-- Other alcohols -->
        <li>VBE_Gin</li>
        <li>VBE_Tequila</li>
        <li>VBE_Vodka</li>
        <li>VBE_Whiskey</li>
      </value>
    </match>
  </Operation>
</Patch>