<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperation.FindModByID">
    <mods>
      <li>dismarzero.VGP.CuproPandasDrinks</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef/comps/li[@Class='RimFridge.CompProperties_Refrigerator']/drinksBestCold</xpath>
      <value>
        <!--Alcohols-->
        <li>CPD_Nigori</li>
        <li>CPD_Stout</li>
        <li>CPD_Vodka</li>
        <li>CPD_Whiskey</li>
        <li>VGP_BerryWine</li>
        <li>CPD_GreenDragon</li>

        <!--Sodas-->
        <li>CPD_Chocolate</li>
        <li>CPD_RootBeer</li>
        <li>CPD_Berry</li>
        <li>CPD_Agave</li>
        <li>CPD_Koka</li>
        <li>CPD_Peppi</li>
      </value>
    </match>
  </Operation>
</Patch>